generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url = env("DATABASE_URL")
}

enum SubscriptionTier {
  FREE
  PREMIUM
  ENTERPRISE
}

enum TimerState {
  IDLE
  RUNNING
  PAUSED
  STOPPED
}

enum Role {
  OWNER
  ADMIN
  MEMBER
}

enum AttachmentType {
  LINK
  FILE
}

model Account {
  id                 String  @id @default(cuid())
  userId             String
  type               String
  provider           String
  providerAccountId  String
  refresh_token      String?  @db.Text
  access_token       String?  @db.Text
  expires_at         Int?
  token_type         String?
  scope              String?
  id_token           String?  @db.Text
  session_state      String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model User {
  id            String    @id @default(cuid())
  name          String?
  email         String?   @unique
  emailVerified DateTime?
  image         String?
  tier          SubscriptionTier @default(FREE)
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt

  accounts      Account[]
  sessions      Session[]
  
  // App relations
  categories    Category[] @relation("Owner")
  collabCategories Category[] @relation("Collaborators")
  todos         Todo[]     @relation("Owner")
  assignedTodos Todo[]     @relation("Assignees")
  teams         TeamMember[]
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

model Team {
  id        String   @id @default(cuid())
  name      String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  
  members   TeamMember[]
  categories Category[]
}

model TeamMember {
  id        String   @id @default(cuid())
  userId    String
  teamId    String
  role      Role     @default(MEMBER)
  
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  team      Team     @relation(fields: [teamId], references: [id], onDelete: Cascade)

  @@unique([userId, teamId])
}

model Category {
  id          String   @id @default(cuid())
  title       String
  color       String   @default("bg-white")
  description String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  
  ownerId     String
  owner       User     @relation("Owner", fields: [ownerId], references: [id], onDelete: Cascade)
  
  teamId      String?
  team        Team?    @relation(fields: [teamId], references: [id])
  
  collaborators User[] @relation("Collaborators")
  
  phases      Phase[]
  todos       Todo[]
  attachments Attachment[]
}

model Phase {
  id          String   @id @default(cuid())
  title       String
  deadline    DateTime?
  categoryId  String
  category    Category @relation(fields: [categoryId], references: [id], onDelete: Cascade)
  todos       Todo[]
}

model Todo {
  id            String   @id @default(cuid())
  title         String
  description   String?
  completed     Boolean  @default(false)
  completedAt   DateTime?
  deadline      DateTime?
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
  
  // Timer
  timeSpent     Int        @default(0) // seconds
  timerState    TimerState @default(IDLE)
  lastStartedAt BigInt?    // timestamp
  
  categoryId    String
  category      Category   @relation(fields: [categoryId], references: [id], onDelete: Cascade)
  
  phaseId       String?
  phase         Phase?     @relation(fields: [phaseId], references: [id])
  
  ownerId       String
  owner         User       @relation("Owner", fields: [ownerId], references: [id], onDelete: Cascade)
  
  assignees     User[]     @relation("Assignees")
  
  subTodos      SubTodo[]
  attachments   Attachment[]
}

model SubTodo {
  id        String   @id @default(cuid())
  title     String
  completed Boolean  @default(false)
  deadline  DateTime?
  todoId    String
  todo      Todo     @relation(fields: [todoId], references: [id], onDelete: Cascade)
}

model Attachment {
  id         String         @id @default(cuid())
  name       String
  url        String
  type       AttachmentType
  
  todoId     String?
  todo       Todo?          @relation(fields: [todoId], references: [id], onDelete: Cascade)
  
  categoryId String?
  category   Category?      @relation(fields: [categoryId], references: [id], onDelete: Cascade)
}